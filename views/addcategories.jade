extends layout

block content
    h2=title
    if errors
        each error in errors
            div.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/add')
        .form-group
            label Category Name:
            input.form-control(name='title', type= 'text', placeholder='Enter a new category')
        input.btn.btn-primary(name='submit', type='submit', value='Save')
