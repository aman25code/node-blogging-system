extends layout

block content
  if posts
    each post, i in posts
      .post
        h1
          a(href='/post/show/#{post._id}')
            =post.title
        p.meta Posted in &nbsp;
            a(href='/categories/show/#{post.category}') #{post.category}
            |&nbsp; by #{post.author} on #{moment(post.date).format("DD-MM-YYYY")}
        !=truncateText(post.boyd,280)
        h4
          a.more(href='/post/show/#{post._id}') Read More
